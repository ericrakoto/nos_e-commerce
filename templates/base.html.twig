<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        	<link rel="stylesheet" href="{{asset('css/bootstrap.css')}}" type="text/css" >
        	  <link rel="stylesheet" href="{{asset('adminLTE/plugins/fontawesome-free/css/all.min.css')}}" type="text/css" >
        	  <link rel="stylesheet" href="{{asset('css/all.min.css')}}" type="text/css" >
        	   <link rel="stylesheet" href="{{asset('css/fontawesome.css')}}" type="text/css" >
        {% endblock %}
    </head>
    <body>
    	{% if app.user != null %}
    	<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <p class="h5 my-0 mr-md-auto fw-normal">NosyTech</p>
      <nav class="my-2 my-md-0 mr-md-3">
      <a class="btn btn-outline-primary" href="/accueil">Accueil</a>
      <a class="btn btn-outline-primary" href="/admin">Admin</a>
      
      <a  class="btn btn-outline-primary" href="/adm/panier"><span class="panier"><i class="fas fa-cart-plus fa-lg mr-2"></i>
        Panier <button class="tot">{{totalQuantite}}</button></span></a>
      
      <a class="btn btn-outline-secondary" href="/logout">deconnexion</a>
      </nav>
      </header>
		{% else %}
		<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
			  <p class="btn-tsindrio">NosyTech</p>
			  <nav class="my-2 my-md-0 mr-md-3">
			    <a class="btn-tsindrio" href="/register">s'enregistrer</a>
			  </nav>
			  <a class="btn-tsindrio" href="/login">login</a>
		</header>
	    {% endif %}

	    <main role="main" class="container">
			{% block body %}{% endblock %}
		</main>

        {% block javascripts %}
        	<script src="{{asset('js/jquery-3.5.1.js')}}" type="text/javascript"></script>
			<script src="{{asset('js/bootstrap.js')}}"type="text/javascript"></script>
			<script src="{{asset('js/glm-ajax.js')}}" type="text/javascript"></script>
        	<script type="text/javascript">
        		{% block js %}{% endblock %}
        	</script>
        {% endblock %}
    </body>
</html>
