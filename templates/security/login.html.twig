<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('css/bootstrap.css')}}" type="text/css" >
            <link rel="stylesheet" href="{{asset('css/signin.css')}}" type="text/css" >
        {% endblock %}

{% block body %}
        <body class="text-center" style="background-color: #302b2b;">
        <main class="form-signin" style="border-radius: 10px;background-color: #221d1d;">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                </div>
            {% endif %}

        <div class="form-group">
            <img class="mb-4" src="{{asset('logo/logo.svg')}}" alt="" width="144" height="114">

            <h1 class="h3 mb-3 font-weight-normal" >Fenoina</h1>
                    <input placeholder="Adresse mailaka..." type ="text"  required_name="_username"class="form-control" name="email" id="inputEmail" style="border-radius: 25px;"/>
                </div>
                <div class="form-group">
                    <input placeholder="teny miafina..." type ="password" required_name="_password"class="form-control" name="password" id="inputPassword"style="border-radius: 25px;"/>
                </div>
                <div class="form-group">
                    <button type ="submit" class="btn btn-success" >Entrer</button>
                </div>

                
                <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
            </form>
            
            </main>

{% endblock %}
 {% block javascripts %}
            <script src="{{asset('js/jquery-3.5.1.js')}}"></script>
            <script src="{{asset('js/bootstrap.js')}}"></script>
            <script src="{{asset('js/glm-ajax.js')}}"></script>
            <script type="text/javascript">
                {% block js %}{% endblock %}
            </script>
        {% endblock %}
